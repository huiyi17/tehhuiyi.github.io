@{ Layout = "_LayoutNEW"; }

@model List<Journal>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Where We Were</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/js/jquery.min.js"></script>
    <script src="~/lib/jquery/lightbox-plus-jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/brands.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/solid.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/lightbox.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/lightbox.min.css" rel="stylesheet" />
    <style>
        .gallery {
            margin: 10px 90px;
        }

            .gallery img {
                transition: 1s;
                padding: 5px;
                width: 300px;
                height: 200px;
            }

                .gallery img:hover {
                    filter: grayscale(100%);
                    transform: scale(1.1);
                }

        .item {
            width: 300px;
            text-align: center;
            display: block;
            background-color: transparent;
            border: 1px solid transparent;
            margin-right: 10px;
            margin-bottom: 10px;
            float: left;
        }
    </style>
    <script>
        lightbox.option({
            'resizeDuration': 200,
            'wrapAround': true
        })
    </script>
</head>
<body>
    <div class="gallery">
        @foreach (Journal row in Model)
        {
        <div class="item">
            <a href="~/journal/@row.JournalPic" data-lightbox="mygallery" data-title=@row.JournalTitle>
                <img src="~/journal/@row.JournalPic" width="150" />
            </a>
            <a asp-controller="Journal"
               asp-action="Update"
               asp-route-JournalId="@row.JournalId"
               onclick="return confirm('Delete Journal @row.JournalId?')">
                @*<input type="button" value="Delete Goal" class="btn btn-danger" />*@
                Update
            </a>
            @*<a href="~/Journal/Delete/@row.JournalId">Delete</a>*@
            <a asp-controller="Journal"
               asp-action="Delete"
               asp-route-JournalId="@row.JournalId"
               onclick="return confirm('Delete Journal @row.JournalId?')">
                @*<input type="button" value="Delete Goal" class="btn btn-danger" />*@
                Delete
            </a>
        </div>
        }
    </div>
</body>
</html>
