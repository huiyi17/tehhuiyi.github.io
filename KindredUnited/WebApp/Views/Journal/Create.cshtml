@{ Layout = "_LayoutNEW"; }

@model Journal

<form method="post"
      asp-controller="Journal"
      asp-action="Create"
      enctype="multipart/form-data">

    <div class="form-group row">
        <div class="offset-sm-5 col-sm-6">
            <h2>New Moment</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label offset-sm-3 col-sm-1" asp-for="JournalTitle">Title :</label>
        <div class="col-sm-6">
            <input type="text" asp-for="JournalTitle" class="form-control" />
            <span asp-validation-for="JournalTitle" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label offset-sm-3 col-sm-1" asp-for="JournalDescr">Description:</label>
        <div class="col-sm-6">
            <textarea asp-for="JournalDescr" rows="8" cols="20" class="form-control"></textarea>
            <span asp-validation-for="JournalDescr" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label offset-sm-3 col-sm-1" asp-for="Photo">Photo :</label>
        <div class="col-sm-6">
            <input type="file" asp-for="Photo" class="form-control-file" />
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="control-label offset-sm-4 col-sm-1">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>


    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        </div>
    }
</form>
