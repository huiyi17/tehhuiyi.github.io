@model Transfer

@{ Layout = "_LayoutNEW"; }

<style>

    .wrapper {
        display: inline-block;
    }

    form {
        font-family: Arial;
        padding: 10px;
        background: #FCF6F1;
    }
</style>



<meta name="viewport" content="width=device-width" />
<title>Update Member Details</title>
<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

<body style="background-color: #FFEED6">
    <form method="post"
          asp-controller="Payment"
          asp-action="EditMember" style="background-color: #FFEED6">

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-5">
                <h2>Update Member Details</h2>
            </div>
        </div>

        <input type="text" asp-for="Id" hidden />
        <input type="text" asp-for="Picture" hidden />

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-5">
                <img id="ImgPhoto" src="/photos/@Model.Picture" style="height:1600px; width:400px;" />
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" for="Member">Member Name:</label>
            <div class="col-sm-5">
                <input type="text" asp-for="Member" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Member" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <label class="control-label col-sm-2" for="Email">Member Email:</label>
            <div class="col-sm-5">
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" for="Notes">Member Notes :</label>
            <div class="col-sm-5">
                <textarea asp-for="Notes" rows="8" cols="20" class="form-control"></textarea>
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </div>

        <div class="wrapper offset-sm-2 col-sm-5">


            <input type="submit" value="Update Member Details" class="btn btn-success" />




        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-5">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <text>@ViewData["Message"]</text>
                    </div>
                </div>
            </div>
        }
    </form>
</body>