@model List<Goal>

@{
    Layout = "~/Views/Shared/_LayoutNEW.cshtml";

}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <style>



        /* Add padding to container elements */
        .container {
            background-color: #FFEED6;
        }



        * {
            box-sizing: border-box;
        }

        /* Header/Blog Title */
        .header {
            vertical-align: middle;
            position: relative;
            text-align: center;
            background-image: url(../goalPic/goalImage.jpg);
            height: 170px;
            width: 100%;
            background-size: 1658px 170px;
        }


            .header h1 {
                font-size: 50px;
                text-align: center;
                color: rgba(0,0,0,0.6);
                text-shadow: 2px 8px 6px rgba(0,0,0,0.2), 0px -5px 35px rgba(255,255,255,0.3);
            }

            .header p {
                font-size: 30px;
                text-align: center;
                color: rgba(0,0,0,0.6);
                text-shadow: 2px 8px 6px rgba(0,0,0,0.2), 0px -5px 35px rgba(255,255,255,0.3);
            }

        /* Change color on hover */
        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }


        /* Right column */
        .content {
            vertical-align: middle;
            margin-left: 0px;
            width: 100%;
            height: auto;
        }

        /* Add a card effect for articles */
        .card {
            background-color: #FFEED6;
            margin-top: 10px;
            width: 1700px;
            width: auto;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        .picontent {
            display: block;
            margin-left: auto;
            margin-right: auto;
            max-width: 1188px;
            position: center;
        }

            .picontent img {
                height: 100%;
                width: 100%;
            }


        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        /* Footer */
        .footer {
            padding: 30px;
            padding-bottom: 70px;
            background-color: lightblue;
            vertical-align: middle;
            margin-top: 10px;
            margin-left: 0px;
            width: 100%;
        }

        .progress-bar-striped {
            width: 100%;
            background-color: green;
        }



        .currVal {
            color: green;
            font-size: 40px;
        }

        .endVal {
            color: dimgrey;
            font-size: 20px;
        }

        .inline {
            display: inline;
        }

        .button {
            display: inline-block;
            padding: 8px 18px;
            font-size: 20px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #fff;
            background-color: darkorange;
            border: none;
            border-radius: 15px;
            box-shadow: 0 9px #999;
            float: right;
        }

            .button:hover {
                background-color: coral
            }

            .button:active {
                background-color: #3e8e41;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }

        .submission {
            display: inline-block;
            padding: 8px 18px;
            font-size: 20px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #fff;
            background-color: forestgreen;
            border: none;
            border-radius: 15px;
            box-shadow: 0 9px #999;
            float: left;
            position: relative;
            left: 45%;
        }

            .submission:hover {
                background-color: #3e8e41
            }

            .submission:active {
                background-color: #3e8e41;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }

        .progress {
            height: 25px;
        }

        .monospace {
            font-family: 'Comic Sans MS';
            text-align: center;
        }

        * {
            box-sizing: border-box
        }
        /* Full-width input fields */
        input[type=text], input[type=password] {
            width: 100%;
            padding: 15px;
            margin: 5px 0 22px 0;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }

            /* Add a background color when the inputs get focus */
            input[type=text]:focus, input[type=password]:focus {
                background-color: #ddd;
                outline: none;
            }

        /* Set a style for all buttons */
        button {
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: auto;
            opacity: 0.9;
        }

            button:hover {
                opacity: 1;
            }
    </style>
</head>
<body>

    <div class="header">
        <h1>Family Fundraiser</h1>
        <p><b>Set goals to reach together as a family!.</b></p>
    </div>



    <div class="row">
        <div class="content">
            @foreach (Goal goal in Model)
            {
            <a href="/Fundraiser/Edit/@goal.GID">
                <div class="card">
                    <h2><b>@goal.GName</b></h2>
                    <h5>Goal Initiated by <b>@goal.UserId</b></h5>
                    <div class="picontent">
                        <img src="~/goalPic/@goal.GPhoto" alt="Photo" />
                    </div>
                    <p><b><i>Goal Description:@goal.GDesc</i></b></p>
                    <br>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" id="progressBar" aria-valuenow="0" aria-valuemin="0"
                             aria-valuemax="100" style="width: @(Convert.ToInt32(@goal.GCurr) * 100 / Convert.ToInt32(@goal.GTotal))%">

                            <b>@( Convert.ToInt32(@goal.GCurr) * 100 / Convert.ToInt32(@goal.GTotal))% Completed</b>
                        </div>
                    </div>
                    <div>
                        <p class="currVal inline"><b>S$@goal.GCurr</b></p>
                        <p class="endVal inline"><b> saved of S$@goal.GTotal</b></p>

                    </div>
                    <a href="/Fundraiser/Fund/@goal.GID" class="button" role="button">Fund this goal</a>
                </div>
            </a>


            }
        </div>
    </div>



    <div class="footer">
        <a href='/Fundraiser/Add'>
            <div class="monospace">
                <p><h2><b>Want to start a goal?</b> </h2></p>

            </div>

        </a>
        <input type='button' class="submission" value='Add New Goal!' />
    </div>





</body>


</html>


